{
  "ReverseProxy": {
    "Routes": {
      "productRoute": {
        "ClusterId": "productCluster",
        "Match": {
          "Path": "/api/product/{**catch-all}"
        }
      },
      "authRoute": {
        "ClusterId": "authCluster",
        "Match": {
          "Path": "/api/auth/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "productCluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://productservice:8080/"
          }
        }
      },
      "authCluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://authservice:8080/"
          }
        }
      }
    }
  }
}